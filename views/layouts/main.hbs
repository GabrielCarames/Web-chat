          </li>
          {{/if}}
        </ul>
      </div>
    </div>

  </nav>

  {{>error}}
  <section>
    {{{body}}}
  </section>

  <!-- formulario para agregar amigo -->
  <div id="modalAgregarAmigo" uk-modal>
    <div class="uk-modal-dialog uk-modal-body">
      <h2 class="uk-heading-bullet">Agregar un amigo</h2>
      <form action="/user/sendfriendrequest" method="POST">
        <div class="form-group mt-4">
          <label for="exampleInputEmail1">Escribe el nombre del usuario que quieras agregar</label>
          <input type="text" class="form-control mt-2" name='addfriend'>
          <small id="emailHelp" class="form-text text-muted mt-2">El nombre de usuario debe existir</small>
        </div>
        <p class="uk-text-right">
          <button class="uk-button uk-button-default uk-modal-close" type="button">Cancelar</button>
          <button class="uk-button uk-button-primary" type="submit">Enviar solicitud</button>
        </p>
      </form>
    </div>
  </div>

  <div uk-scrollspy="cls: uk-animation-fade; target: .footer; delay: 1; repeat: true">
    <footer class="footer">
      <div class="hola d-flex flex-row d-flex bd-highlight">
        <div class="mr-auto p-2 bd-highlight">
          <ul class="uk-navbar-nav pl-4">
            <li class="uk-active"><a href="/" class="text-white">Contacto</a></li>
            <li class="uk-active"><a href="/" class="text-white">Términos</a></li>
            <li class="uk-active"><a href="/" class="text-white">Preguntas frecuentes</a></li>
          </ul>
        </div>
        <div class="p-2 bd-highlight text-white">Facebook</div>
        <div class="p-2 bd-highlight text-white">Twitter</div>
      </div>
      <div>
        <div class="d-flex flex-row align-items-center">
          <p style="text-align: center;">Copyright Parches</p>
        </div>
      </div>
  </div>
  </footer>
  </div>
</body>

<script>
  var notifications = document.getElementById('notifications');
  function addNotifications() {
    $.get("http://localhost:3000/user/notifications", data => {
      console.log(data)
      console.log(data._id)
      $.each(data, function () {
        notifications.innerHTML = ""
        insertNotification(this._id, this.notificationType, this.from,this.createdAt)
      })
    });
  }

  function insertNotification(id, type, from, createdAt) {
    console.log("la ptua uqete pario")
    console.log(from)
    var acceptRouter = "user/acceptfriendrequest/" + id + "/" + from
    var refuseRouter = "user/refusefriendrequest/" + from._id
    if (type == 'friendRequest') {
      notifications.innerHTML += 
      '<p class="mt-3"> Solicitud de amistad enviado por: ' + from.username +
      '<a type="button" href="' + acceptRouter +'" class="btn btn-primary btn-sm ml-3">Aceptar</a> ' +
      '<a type="button" href="'+ refuseRouter +'" class="btn btn-secondary btn-sm" data-bs-dismiss="toast">Rechazar</a>'
    }
  }
</script>

</html>