<body>
  <nav id="navbar" class="uk-navbar-container" uk-navbar>

    <div class="uk-navbar-center">
      <div>
        <ul class="uk-navbar-nav">
          <li class="uk-active"><a href="/" class="text-white">Inicio</a></li>
        </ul>
      </div>
    </div>

    <div class="uk-navbar-left">
      <div>
        <ul class="uk-navbar-nav">
          {{#if username}}
          <li><a href="/user/profile"><button class="uk-button uk-button-default text-white">Mi perfil</button></a></li>
          <li><a>
              <button class="uk-button uk-button-default text-white" type="button"
                onClick="addNotifications()">Notificaciones</button>
              <div uk-dropdown="mode: click" id="notifications">
              </div>
            </a></li>
          {{/if}}
        </ul>
      </div>
    </div>

    <div class="uk-navbar-right">
      <div>
        <ul class="uk-navbar-nav">
          {{#if username}}
          <li><a><button class="uk-button uk-button-default text-white" uk-toggle="target: #modalAgregarAmigo">Agregar
                amigo</button></a></li>
          <li><a href="/user/logout"><button class="uk-button uk-button-default text-white">Cerrar sesión</button></a>
